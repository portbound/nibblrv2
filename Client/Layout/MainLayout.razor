@using System.Linq.Expressions
@using Client.wwwroot.css.Themes
@inherits LayoutComponentBase

<MudThemeProvider Theme="Main.Theme"/>
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@(_open ? Icons.Material.Filled.ArrowBack : Icons.Material.Filled.Menu)" Color="Color.Dark" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Uncategorized.Baguette" Color="Color.Dark" Href="#" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="@_open" ClipMode="DrawerClipMode.Never" Elevation="1" Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Nibblr</MudText>
            <MudIcon Icon="@Icons.Custom.Uncategorized.Baguette" Color="Color.Dark"/>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">Home</MudNavLink>
            <MudNavLink Href="/CreateRecipe" Match="NavLinkMatch.All">New Recipe</MudNavLink>
            <MudNavLink Href="/Counter" Match="NavLinkMatch.All">Counter</MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16 custom-background">
        <MudContainer Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _open = false;

    private void ToggleDrawer() {
        _open = !_open;
    }
    
    
}