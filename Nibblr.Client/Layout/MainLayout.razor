@using System.Linq.Expressions
@using Client.wwwroot.css.Themes
@inherits LayoutComponentBase

<MudThemeProvider Theme="Main.Theme"/>
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@(_open ? Icons.Material.Filled.ArrowBack : Icons.Material.Filled.Menu)" Color="Color.Dark" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />
        <MudImage Src="images/Nibblr-250px.png" Width="60" Alt="Nibblr" Class="nibblr-icon"/>
        
    </MudAppBar>
    <MudDrawer @bind-Open="@_open" ClipMode="DrawerClipMode.Never" Elevation="1" Variant="@DrawerVariant.Temporary">
        <MudDrawerHeader Class="justify-center">
            <MudText Typo="Typo.h6" Class="align-self-end">Nibblr</MudText>
            <MudImage Src="images/Nibblr-250px.png" Width="60" Alt="Nibblr" Class="nibblr-icon"/>
        </MudDrawerHeader>
        <MudNavMenu>
            <MudNavLink Href="/" Match="NavLinkMatch.All">
                <div class="d-flex">
                    <MudIcon Icon="@Icons.Material.Outlined.ChromeReaderMode" Class="mr-2"/>
                    Recipes
                </div>
            </MudNavLink>
            <MudNavLink Href="/CreateRecipe" Match="NavLinkMatch.All">
                <div class="d-flex">
                    <MudIcon Icon="@Icons.Material.Outlined.LibraryAdd" Class="mr-2"/>
                    New Recipe
                </div>
            </MudNavLink>
            <MudNavLink Href="/ExtractRecipe" Match="NavLinkMatch.All">
                <div class="d-flex">
                    <MudIcon Icon="@Icons.Material.Filled.Grain" Class="mr-2"/>
                    Extract Recipe
                </div>
            </MudNavLink>
        </MudNavMenu>
    </MudDrawer>
    <MudMainContent Class="custom-background">
        <MudContainer Fixed="true">
            @Body
        </MudContainer>
    </MudMainContent>
    <MudScrollToTop>
        <MudFab Color="Color.Tertiary" StartIcon="@Icons.Material.Filled.ArrowUpward" />
    </MudScrollToTop>
</MudLayout>

@code {
    private bool _open = false;

    private void ToggleDrawer() {
        _open = !_open;
    }
    
    
}