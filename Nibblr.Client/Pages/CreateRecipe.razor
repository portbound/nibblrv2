@page "/CreateRecipe"

@inject HttpClient Client
@using static Microsoft.AspNetCore.Components.Web.RenderMode
@using Client.Components
@rendermode InteractiveWebAssembly

<MudBreadcrumbs Items="Crumbs"></MudBreadcrumbs>

<EditRecipeComponent OnToggleIsEditing="ToggleIsEditing"/> 

@code {
    private readonly List<BreadcrumbItem> Crumbs = [
        new BreadcrumbItem("Recipes", href: "#"),
        new BreadcrumbItem("New Recipe", href: null, disabled: true)
    ];
    
    private bool IsEditing = false;

    private void ToggleIsEditing() {
        IsEditing = !IsEditing;
    }
}
